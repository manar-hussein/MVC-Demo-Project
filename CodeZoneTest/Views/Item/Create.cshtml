@model AddItemViewModel
<h1 class="text-center display-5 dm-serif-text-regular-italic">Add New Item </h1>
<hr />
<div class="row justify-content-center py-5">
    <div class="col-md-9">
        <form asp-action="Create" method="post" class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group w-100">
                <label asp-for="Name" class="control-label fs-5 ms-1"></label>
                <input asp-for="Name" class="form-control w-100" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-4 text-center">
                <input type="submit" value="Create" class="btn w-25 btn-light fs-5 fw-bolder text-dark dm-serif-text-regular-italic" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
