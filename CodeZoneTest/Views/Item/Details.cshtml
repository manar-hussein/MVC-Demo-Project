@model GetItemWithStoresViewModel
@{
    Layout = "_MyLayout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<h1 class="text-center text-white fw-bolder display-5 fst-italic dm-serif-text-regular-italic">@Model.ItemName</h1>

<div class="row justify-content-center">
    <div class=" col-9">
        <table class="table table-dark text-center text-white fs-5 fw-bolder">
            <thead>
                <tr>
                    <th>
                        Index
                    </th>
                    <th>
                        Store Name
                    </th>
                    <th>
                        Quantity
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model.Stores)
                {
                    i++;
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @item.StoreName
                        </td>
                        <td>
                            @item.ItemQuantity
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


